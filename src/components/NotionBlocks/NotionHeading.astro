---
import NotionText from '@/components/NotionBlocks/NotionText.astro';

const { block } = Astro.props;
---
{block.type === 'heading_1' && <h1>{block.heading_1.rich_text.map(t => <NotionText block={t} />)}</h1>}
{block.type === 'heading_2' && <h2>{block.heading_2.rich_text.map(t => <NotionText block={t} />)}</h2>}
{block.type === 'heading_3' && <h3>{block.heading_3.rich_text.map(t => <NotionText block={t} />)}</h3>}