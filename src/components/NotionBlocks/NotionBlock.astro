---
import NotionCallout from '@/components/NotionBlocks/NotionCallout.astro';
import NotionParagraph from '@/components/NotionBlocks/NotionParagraph.astro';
import NotionDivider from '@/components/NotionBlocks/NotionDivider.astro';
import NotionColumnList from '@/components/NotionBlocks/NotionColumnList.astro';
import NotionChildPage from '@/components/NotionBlocks/NotionChildPage.astro';

const { block } = Astro.props;
const blocksToRender = {
 callout: NotionCallout,
 paragraph: NotionParagraph,
 divider: NotionDivider,
 column_list: NotionColumnList,
 child_page: NotionChildPage,
}
const RenderBlock = blocksToRender[block.type];
---
    <div>
        {RenderBlock ? <RenderBlock {block} /> : block.type}
    </div>